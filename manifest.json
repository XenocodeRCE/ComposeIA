{
  "manifest_version": 3,
  "name": "ComposeIA",
  "version": "1.0",
  "description": "Extension pour utiliser l'IA via Groq n'importe où. Orienté rédaction.",
  "permissions": ["contextMenus", "activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}